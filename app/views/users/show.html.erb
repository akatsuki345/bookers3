<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:success] %>
  <p id="success">
     <%= flash[:success] %>
  </p>
<% end %>

<% if flash[:notice] %>
  <p id="notice">
     <%= flash[:notice] %>
  </p>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-lg-4">
   <h1>User info</h1>
    <%=image_tag current_user.get_profile_image(200,200) %>

    <p>name</p>
    <span><%= @user.name %></span>
    <P>introduction	</P>
    <span><%= @user.introduction %></span>
    <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
    <h1>New book</h1>
    <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
   <% end %>
  </div>
  <div class="col-lg-8">
   <table class="table table-striped">
   <h1>Books</h1>
   <p>Title</p>
   <p>Opinion</p>
   <% @books.each do |book| %>
   <%=image_tag book.user.get_profile_image(100,100) %>
   <span><%= book.title %></span>
   <span><%= book.body %></span>
   <% end %>
   </table>
  </div>
 </div>
</div>