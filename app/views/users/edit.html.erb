<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   <p id="notice"></p>
   <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
       <% if @user.errors.any? %>
        <div id="error_explanation">
         <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <%= form_with model: @user, url: user_path(@user.id) do |f| %>
        <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %>
        </div>
        <div class="form-group">
        <label for="user-image">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <%= f.submit 'Update User', class: "btn btn-success" %>
        <% end %>
    </div>
   </div>
  </div>
