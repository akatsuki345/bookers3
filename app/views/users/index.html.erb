<div class="container">
 <div class="row">
  <div class="col-lg-4">
   <h1>User info</h1>
   <%= form_with model: @book do |f| %>
    <%=image_tag current_user.get_profile_image(200,200) %>
    <%= f.file_field :image, accept: "image/*" %>
    <p>name</p>
    <P>introduction	</P>
    <h1>New book</h1>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
   <% end %>
  </div>
  <div class="col-lg-8">
   <h1>Books</h1>
   <p>image</p>
   <p>name</p>
   <% @users.each do |user| %>
   <%=image_tag @book.user.get_profile_image(100,100) %>
   <span><%= user.name %></span>
   <%= link_to 'Show', user_path(user.id) %>
   <% end %>
  </div>
 </div>
</div>

