 <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

   <% if flash[:success] %>
     <p id="success">
       <%= flash[:success] %>
     </p>
   <% end %>
   <%= render 'users/list', user: current_user,book: @book %>
    <div class="col-lg-8">
   <table class="table table-striped">
   <h1>Book  detail</h1>
   <% @books.each do |book| %>
   <%=image_tag book.user.get_profile_image(100,100) %>

   <%= link_to book_path(book.id) do %>
      <%= book.title %>
   <% end %>

   <span><%= book.body %></span>
   <% end %>
   </table>
  </div>

    <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <%= link_to "delete", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
 　　 <% end %>

   </table>
  </div>
 </div>
