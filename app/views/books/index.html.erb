<%= render 'users/list', user: @user,book: @book %>

   <div class="col-lg-8">
   <table class="table table-striped">
   <h1>Books</h1>
   <p>Title</p>
   <p>Opinion</p>
   <% @books.each do |book| %>
   <%=image_tag book.user.get_profile_image(100,100) %>

   <%= link_to book_path(book.id) do %>
      <%= book.title %>
   <% end %>

   <span><%= book.body %></span>
   <% end %>
   </table>
  </div>