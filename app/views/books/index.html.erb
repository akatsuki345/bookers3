<div class="container">
 <div class="row">
  <div class="col-lg-4">
   <h1>新規投稿</h1>
   <%= form_with model: @book do |f| %>
    <h4>画像</h4>
    <%=image_tag current_user.get_profile_image(200,200) %>
    <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :body %>

    <%= f.submit '投稿' %>
   <% end %>
  </div>
  <div class="col-lg-8">

  </div>
 </div>
</div>
